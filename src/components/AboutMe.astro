---
import { useTranslations, type Locale } from "../i18n/index";

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
  class="flex flex-col-reverse md:flex-row gap-x-2 justify-center items-center">
  <div
    class="[&>p]:mb-4 [&>p>strong]:text-yellow-300 [&>p>strong]:font-semibold text-pretty">
    <p>
      {t("about.p1")}
      <strong>{t("about.p1.highlight")}</strong>
    </p>
    <p>
      {t("about.p2")} <strong>{t("about.p2.project")}</strong>{t("about.p2.rest")}
    </p>
    <p>
      {t("about.p3")}
      <strong>{t("about.p3.highlight")}</strong>
      {t("about.p3.rest")}
    </p>
  </div>
  <img
    alt="Pic of the creator of this site"
    src="/JoaEm2.jpeg"
    class="rounded-full size-56 hover:scale-125 transition"
  />
</section>
