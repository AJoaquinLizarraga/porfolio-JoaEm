---
import Badge from "@/components/Badge.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import SocialPill from "@/icons/SocialPill.astro"
import CalendlyIcon from "@/icons/Calendly.astro"
import Layout from "@/layouts/Layout.astro"
---

<Layout
  title="Design System portfolio-JoaEm"
  description="Catalog of portfolio components"
>
  <SectionContainer class="py-44 pb-32 flex flex-col gap-y-10">
    <article class="mb-8">
      <h1 class="mb-4 text-xl font-bold">&lt;Badge /&gt;</h1>
      <Badge>Disponible para ser contratado</Badge>
      <Badge>Available to be hired</Badge>
    </article>
    <article class="mb-8">
      <h1 class="mb-4 text-xl font-bold">&lt;SocialPill /&gt;</h1>
      <div class="flex">
        <SocialPill href="https://calendly.com/joaem-lizarraga">
          <CalendlyIcon class="size-4 md:size-6" />
          Calendly
        </SocialPill>
      </div>
    </article>
  </SectionContainer>
</Layout>
